{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "angularCompilerOptions": {
    "paths": {
      "schemes": [
        "projects/schemes/src/public_api"
      ],
      "dist/shared": [
        "projects/shared/src/public_api"
      ],
      "shared": [
        "projects/shared/src/public_api"
      ],
      "core": [
        "projects/core/src/public_api"
      ],
      "testing": [
        "projects/testing/src/public_api"
      ]
    }
  }
}
